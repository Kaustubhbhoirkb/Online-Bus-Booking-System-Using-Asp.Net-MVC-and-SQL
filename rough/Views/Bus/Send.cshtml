@model rough.Models.MailMessage

@{
    ViewData["Title"] = "Send";
}

<h1>Enquiry</h1>

@if(ViewBag.Mgs!=null)
{
    <h4>@ViewBag.Mgs</h4>
}
<hr />
<div class="col-md-12">

<div class="row">
    <div class="col-md-6">
        <img src="~/photos/inquiry.png" />

    </div>
    <div class="col-md-6">
        <form asp-action="Send">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="To" class="control-label"><b>To</b></label>
                <input asp-for="To" class="form-control" required/>
                <span asp-validation-for="To" class="text-danger"></span>
            </div>

          
            <div class="form-group">
                <label asp-for="Subject" class="control-label"><b>Subject</b></label>
                <input asp-for="Subject"  class="form-control" required/>
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Body" class="control-label"><b>Issue</b></label>
                <input asp-for="Body" placeholder="Please enter complaint and your email address also" class="form-control" required/>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>
</div>




