@model rough.Models.UserDataModel

<style>
    .divider:after,
    .divider:before {
        content: "";
        flex: 1;
        height: 1px;
        background: #eee;
    }

    .h-custom {
        height: calc(100% - 73px);
    }

</style>
<div>
    <a asp-action="Index" class="btn btn-primary">Back </a>
</div>
<h2><b>Check Your Ewallet Balance </b></h2>
<b>@ViewBag.a</b>
<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">

                <img src="~/photos/ewallet.jpg" class="img-fluid" alt="image" />
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form class="form-horizontal" asp-action="chkbal">

                    <!-- Mobile input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form3Example3"><b>Mobile Number</b></label>
                        <input asp-for="Mobile_No" type="text" class="form-control form-control-lg" placeholder="Enter a Registered Mobile Number" required />
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-3">
                        <label class="form-label" for="form3Example4"><b>Password</b></label>
                        <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Enter password" required />
                    </div>
                   
                    <div class="text-center text-lg-start mt-4 pt-2">
                        <input type="submit" value="Check Balance" class="btn btn-primary btn-lg"
                               style="padding-left: 2.5rem; padding-right: 2.5rem;" />

@*                        <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account? <a asp-action="profile" class="link-danger">Register</a></p>
*@                    </div>
                    @*<div>
                        <a asp-action="Send" class="btn btn-success">Inquiry</a>
                    </div>*@
                </form>
            </div>
        </div>
    </div>
  
</section>


