@model rough.Models.UserDataModel
@{
    ViewData["Title"] = "Home Page";
}
<style>
    .divider:after,
    .divider:before {
        content: "";
        flex: 1;
        height: 1px;
        background: #eee;
    }

    .h-custom {
        height: calc(100% - 73px);
    }

</style>
<div>
    <a asp-action="Reservationdetails" class="btn btn-primary">Back </a>
</div>
<h1><b>Refund To Customer</b></h1>
<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">

                <img src="~/photos/ewallet.jpg" class="img-fluid" alt="image" />
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form class="form-horizontal" asp-action="Refund">
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form3Example3">Enter TicketId: </label>
                        <input asp-for="TicketId" type="text" class="form-control form-control-lg" placeholder="Ticket ID" required />
                    </div>

                    <!-- Mobile input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form3Example3">Enter Mobile No Of Customer: </label>
                        <input asp-for="Mobile_No" type="text" class="form-control form-control-lg" placeholder="Enter a Registered Mobile Number" required />
                    </div>
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form3Example3">Enter Email Of Customer: </label>
                        <input asp-for="Email" type="text" class="form-control form-control-lg" placeholder="Enter a Registered Email" required />
                    </div>
                  

                    <div class="form-outline mb-3">
                        <label class="form-label" for="form3Example4">Amount To Be Refund: </label>
                        <input asp-for="Ewallet" type="number" class="form-control form-control-lg" placeholder="Enter Amount To Be Refunded" required />
                    </div>



                    <div class="text-center text-lg-start mt-4 pt-2">
                        <input type="submit" value="Refund" class="btn btn-primary btn-lg"
                               style="padding-left: 2.5rem; padding-right: 2.5rem;" />

                       
                </form>
            </div>
        </div>
    </div>
   
</section>

@{
    if (TempData["msg"] != null)
    {
        <script>
            alert('@TempData["msg"]')
        </script>
    }

}
