@model rough.Models.Seats1
@{
    ViewData["Title"] = "Home Page";
}
<h1>Book Seat</h1>
<div class="container-fluid">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-6">
                <img src="~/photos/image (3) (1).png" />
            </div>
            <div class="col-md-6" style="padding-top:60px;">
                <form class="form-horizontal" asp-action="Seats">
                    <div class="form-group">
                        <label class="control-label">Bus ID</label>
                        <input asp-for="Busid" class="form-control" type="text" required />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Seat Number:</label>
                        <input asp-for="Seats" class="form-control" type="text" required />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Mobile No.:</label>
                        <input asp-for="Mobile_No" class="form-control" type="text" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="MOP" class="control-label">Mode Of Payment:</label>

                        <select name="security" id="ques" style="width: 100%; height: 35px; border-radius: 4px; border-color: #ced4da;">
                            <option value=""> Select </option>
                            <option value="Ewallet">Ewallet</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Ticket Fare:</label>
                        <input asp-for="amount" class="form-control" type="text" required />
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                    </div>
                </form>
            </div>
            <div class="col-md-6"></div>
        </div>
    </div>
</div>
<br />
<br />

<div>
    <a asp-action="fromto" class="btn btn-primary">Back to Home Page</a>
</div>
</br>
</br>

@{
    if (TempData["msg"] != null)
    {
        <script>
            alert('@TempData["msg"]')
        </script>

    }

}