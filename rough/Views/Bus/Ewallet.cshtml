@model rough.Models.UserDataModel
@{
    ViewData["Title"] = "Home Page";
}
<style>
    .divider:after,
    .divider:before {
        content: "";
        flex: 1;
        height: 1px;
        background: #eee;
    }

    .h-custom {
        height: calc(100% - 73px);
    }

</style>
<div>
    <a asp-action="Index" class="btn btn-primary">Back </a>
</div>
<h1><b>Add Money To Your Ewallet For Faster And Safer Bookings</b></h1>
<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">

                <img src="~/photos/ewallet.jpg" class="img-fluid" alt="image" />
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form class="form-horizontal" asp-action="Ewallet">

                    <!-- Mobile input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form3Example3">Mobile Number</label>
                        <input asp-for="Mobile_No" type="text" class="form-control form-control-lg" placeholder="Enter a Registered Mobile Number" required />
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-3">
                        <label class="form-label" for="form3Example4">Password</label>
                        <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Enter password" required />
                    </div>

                    <div class="form-outline mb-3">
                        <label class="form-label" for="form3Example4">Amount</label>
                        <input asp-for="Ewallet" type="number" class="form-control form-control-lg" placeholder="Enter Amount To Be Deposited" required />
                    </div>

                   

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <input type="submit" value="Add" class="btn btn-primary btn-lg"
                               style="padding-left: 2.5rem; padding-right: 2.5rem;" />

@*                        <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account? <a asp-action="profile" class="link-danger">Register</a></p>
*@                    </div>
                    @*<div>
                        <a asp-action="Send" class="btn btn-success">Inquiry</a>
                    </div>*@
                </form>
            </div>
        </div>
    </div>
    <div>
        <a asp-action="chkbal" class="btn btn-primary">Check Balance </a>
    </div>

</section>

@{
    if (TempData["msg"] != null)
    {
        <script>
            alert('@TempData["msg"]')
        </script>
    }

}
