<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] FASTWAY</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/rough.styles.css" asp-append-version="true" />
   

     <!-- Favicons -->
  <link href="~/photos/busage.png" rel="icon">


    <style>

        .navigation1{
            background:url("../../photos/sliderimg3.png");
        }


        .vl {
          border-left: 6px solid #0000006b;
          height: 37px;;

        .navbar-expand-sm .navbar-nav {
         flex-direction: row-reverse;

        }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 ">
            <div class="container-fluid navigation1">
                <a class="navbar-brand" asp-area="" asp-controller="Bus" asp-action="Index">  <img src="~/photos/icons/240_F_396552956_VAZMfge1XgKaCY3UWOglYHdk7UNaPPck_prev_ui-_1_.svg"  style="height: 50px; width: auto;"/></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1" style="flex-direction:row-reverse;">
                        <li class="nav-item">
                            <a class="nav-link text-white " asp-area="" asp-controller="Bus" asp-action="Ewallet"><img src="~/photos/icons/Ewallet.svg" height="25px;" /> Ewallet</a>
                        </li>
                        <div class=" vl"></div>
                     
                        <li class="nav-item">
                            <a class="nav-link text-white " asp-area="" asp-controller="Bus" asp-action="Adminprofile"><img src="~/photos/icons/admin.svg" height="25px;" /> Admin</a>
                        </li> <div class=" vl"></div>
                        <li class="nav-item">
                            <a class="nav-link text-white " asp-area="" asp-controller="Bus" asp-action="Employeeprofile"> <img src="~/photos/icons/employee.svg" height="25px;" /> Employee</a>
                        </li> <div class="vl"></div>
                        <li  class="nav-item">
                            <a class="nav-link text-white " asp-area=""  asp-controller="Bus" asp-action="login2"> <img src="~/photos/icons/user.svg" height="25px;" /> Customer </a>
                        </li><div class=" vl"></div>
                        <li class="nav-item">
                            <a class="nav-link text-white " asp-area="" asp-controller="Bus" asp-action="fromtonavbar"><img src="~/photos/icons/find.svg" height="25px;" /> Search Buses</a>
                        </li>
                      </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

